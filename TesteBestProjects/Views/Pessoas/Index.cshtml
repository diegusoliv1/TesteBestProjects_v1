
@model IEnumerable<TesteBestProjects.Models.Pessoa>
@{
    ViewBag.Title = "Index";
}

<h2>Pessoa</h2>
<p>
    @Html.ActionLink("Incluir Nova Pessoa", "Create", "Pessoas", new { @class = "btn btn-success" })
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Nome) </th>
        <th>@Html.DisplayNameFor(model => model.Telefone)</th>
        <th>@Html.DisplayNameFor(model => model.Celular)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
            <td>@Html.DisplayFor(modelItem => item.Celular)</td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.PessoaId }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.PessoaId })
            </td>
        </tr>
    }
</table>

